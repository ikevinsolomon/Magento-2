<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="top.links">
            <block class="Magento\Seller\Block\Account\Link" name="my-account-link">
                <arguments>
                    <argument name="label" xsi:type="string" translate="true">My Account</argument>
                    <argument name="sortOrder" xsi:type="number">110</argument>
                </arguments>
            </block>
            <block class="Magento\Seller\Block\Account\RegisterLink" name="register-link">
                <arguments>
                    <argument name="label" xsi:type="string" translate="true">Create an Account</argument>
                </arguments>
            </block>
            <block class="Magento\Seller\Block\Account\AuthorizationLink" name="authorization-link" template="Magento_Seller::account/link/authorization.phtml" />
        </referenceBlock>
        <referenceContainer name="content">
            <block class="Magento\Seller\Block\Account\AuthenticationPopup" name="authentication-popup" as="authentication-popup" template="Magento_Seller::account/authentication-popup.phtml">
                <arguments>
                    <argument name="jsLayout" xsi:type="array">
                        <item name="components" xsi:type="array">
                            <item name="authenticationPopup" xsi:type="array">
                                <item name="component" xsi:type="string">Magento_Seller/js/view/authentication-popup</item>
                                <item name="children" xsi:type="array">
                                    <item name="messages" xsi:type="array">
                                        <item name="component" xsi:type="string">Magento_Ui/js/view/messages</item>
                                        <item name="displayArea" xsi:type="string">messages</item>
                                    </item>
                                </item>
                            </item>
                        </item>
                    </argument>
                </arguments>
            </block>
            <block name="seller.section.config" class="Magento\Seller\Block\SectionConfig" template="Magento_Seller::js/section-config.phtml">
                <arguments>
                    <argument name="sectionNamesProvider" xsi:type="object">Magento\Seller\Block\SectionNamesProvider</argument>
                </arguments>
            </block>
            <block name="seller.seller.data" class="Magento\Seller\Block\SellerData" template="Magento_Seller::js/seller-data.phtml" />
            <block name="seller.data.invalidation.rules" class="Magento\Seller\Block\SellerScopeData" template="Magento_Seller::js/seller-data/invalidation-rules.phtml" />
        </referenceContainer>
    </body>
</page>