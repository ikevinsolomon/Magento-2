<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Webapi:etc/webapi.xsd">
    <!-- Seller Group -->
    <route url="/V1/sellerGroups/:id" method="GET">
        <service class="Magento\Seller\Api\GroupRepositoryInterface" method="getById" />
        <resources>
            <resource ref="Magento_Seller::group" />
        </resources>
    </route>
    <route url="/V1/sellerGroups/default/:storeId" method="GET">
        <service class="Magento\Seller\Api\GroupManagementInterface" method="getDefaultGroup" />
        <resources>
            <resource ref="Magento_Seller::group" />
        </resources>
    </route>
    <route url="/V1/sellerGroups/default" method="GET">
        <service class="Magento\Seller\Api\GroupManagementInterface" method="getDefaultGroup" />
        <resources>
            <resource ref="Magento_Seller::group" />
        </resources>
    </route>
    <route url="/V1/sellerGroups/default/:id" method="PUT">
        <service class="Magento\Seller\Api\SellerGroupConfigInterface" method="setDefaultSellerGroup" />
        <resources>
            <resource ref="Magento_Seller::group" />
        </resources>
    </route>
    <route url="/V1/sellerGroups/:id/permissions" method="GET">
        <service class="Magento\Seller\Api\GroupManagementInterface" method="isReadonly" />
        <resources>
            <resource ref="Magento_Seller::group" />
        </resources>
    </route>
    <route url="/V1/sellerGroups/search" method="GET">
        <service class="Magento\Seller\Api\GroupRepositoryInterface" method="getList" />
        <resources>
            <resource ref="Magento_Seller::group" />
        </resources>
    </route>
    <route url="/V1/sellerGroups" method="POST">
        <service class="Magento\Seller\Api\GroupRepositoryInterface" method="save" />
        <resources>
            <resource ref="Magento_Seller::group" />
        </resources>
    </route>
    <route url="/V1/sellerGroups/:id" method="PUT">
        <service class="Magento\Seller\Api\GroupRepositoryInterface" method="save" />
        <resources>
            <resource ref="Magento_Seller::group" />
        </resources>
    </route>
    <route url="/V1/sellerGroups/:id" method="DELETE">
        <service class="Magento\Seller\Api\GroupRepositoryInterface" method="deleteById" />
        <resources>
            <resource ref="Magento_Seller::group" />
        </resources>
    </route>

    <!-- Seller Metadata -->
    <route url="/V1/attributeMetadata/seller/attribute/:attributeCode" method="GET">
        <service class="Magento\Seller\Api\SellerMetadataInterface" method="getAttributeMetadata" />
        <resources>
            <resource ref="Magento_Seller::seller" />
        </resources>
    </route>
    <route url="/V1/attributeMetadata/seller/form/:formCode" method="GET">
        <service class="Magento\Seller\Api\SellerMetadataInterface" method="getAttributes" />
        <resources>
            <resource ref="Magento_Seller::seller" />
        </resources>
    </route>
    <route url="/V1/attributeMetadata/seller" method="GET">
        <service class="Magento\Seller\Api\SellerMetadataInterface" method="getAllAttributesMetadata" />
        <resources>
            <resource ref="Magento_Seller::seller" />
        </resources>
    </route>
    <route url="/V1/attributeMetadata/seller/custom" method="GET">
        <service class="Magento\Seller\Api\SellerMetadataInterface" method="getCustomAttributesMetadata" />
        <resources>
            <resource ref="Magento_Seller::seller" />
        </resources>
    </route>

    <!-- Seller Address Metadata -->
    <route url="/V1/attributeMetadata/sellerAddress/attribute/:attributeCode" method="GET">
        <service class="Magento\Seller\Api\AddressMetadataInterface" method="getAttributeMetadata" />
        <resources>
            <resource ref="Magento_Seller::seller" />
        </resources>
    </route>
    <route url="/V1/attributeMetadata/sellerAddress/form/:formCode" method="GET">
        <service class="Magento\Seller\Api\AddressMetadataInterface" method="getAttributes" />
        <resources>
            <resource ref="Magento_Seller::seller" />
        </resources>
    </route>
    <route url="/V1/attributeMetadata/sellerAddress" method="GET">
        <service class="Magento\Seller\Api\AddressMetadataInterface" method="getAllAttributesMetadata" />
        <resources>
            <resource ref="Magento_Seller::seller" />
        </resources>
    </route>
    <route url="/V1/attributeMetadata/sellerAddress/custom" method="GET">
        <service class="Magento\Seller\Api\AddressMetadataInterface" method="getCustomAttributesMetadata" />
        <resources>
            <resource ref="Magento_Seller::seller" />
        </resources>
    </route>

    <!-- Seller Account -->
    <route url="/V1/sellers/:sellerId" method="GET">
        <service class="Magento\Seller\Api\SellerRepositoryInterface" method="getById" />
        <resources>
            <resource ref="Magento_Seller::seller" />
        </resources>
    </route>
    <route url="/V1/sellers" method="POST">
        <service class="Magento\Seller\Api\AccountManagementInterface" method="createAccount" />
        <resources>
            <resource ref="anonymous" />
        </resources>
    </route>
    <route url="/V1/sellers/:sellerId" method="PUT">
        <service class="Magento\Seller\Api\SellerRepositoryInterface" method="save" />
        <resources>
            <resource ref="Magento_Seller::manage" />
        </resources>
    </route>
    <route url="/V1/sellers/me" method="PUT" soapOperation="saveSelf">
        <service class="Magento\Seller\Api\SellerRepositoryInterface" method="save" />
        <resources>
            <resource ref="self" />
        </resources>
        <data>
            <parameter name="seller.id" force="true">%seller_id%</parameter>
            <parameter name="seller.group_id" force="true">%seller_group_id%</parameter>
            <parameter name="seller.website_id" force="true">%seller_website_id%</parameter>
            <parameter name="seller.store_id" force="true">%seller_store_id%</parameter>
        </data>
    </route>
    <route url="/V1/sellers/me" method="GET" soapOperation="getSelf">
        <service class="Magento\Seller\Api\SellerRepositoryInterface" method="getById" />
        <resources>
            <resource ref="self" />
        </resources>
        <data>
            <parameter name="sellerId" force="true">%seller_id%</parameter>
        </data>
    </route>
    <route url="/V1/sellers/me/activate" method="PUT">
        <service class="Magento\Seller\Api\AccountManagementInterface" method="activateById" />
        <resources>
            <resource ref="self" />
        </resources>
        <data>
            <parameter name="sellerId" force="true">%seller_id%</parameter>
        </data>
    </route>
    <route url="/V1/sellers/search" method="GET">
        <service class="Magento\Seller\Api\SellerRepositoryInterface" method="getList" />
        <resources>
            <resource ref="Magento_Seller::seller" />
        </resources>
    </route>
    <route url="/V1/sellers/:email/activate" method="PUT">
        <service class="Magento\Seller\Api\AccountManagementInterface" method="activate" />
        <resources>
            <resource ref="Magento_Seller::manage" />
        </resources>
    </route>
    <route url="/V1/sellers/me/password" method="PUT">
        <service class="Magento\Seller\Api\AccountManagementInterface" method="changePasswordById" />
        <resources>
            <resource ref="self" />
        </resources>
        <data>
            <parameter name="sellerId" force="true">%seller_id%</parameter>
        </data>
    </route>
    <route url="/V1/sellers/:sellerId/password/resetLinkToken/:resetPasswordLinkToken" method="GET">
        <service class="Magento\Seller\Api\AccountManagementInterface" method="validateResetPasswordLinkToken" />
        <resources>
            <resource ref="anonymous" />
        </resources>
    </route>
    <route url="/V1/sellers/password" method="PUT">
        <service class="Magento\Seller\Api\AccountManagementInterface" method="initiatePasswordReset" />
        <resources>
            <resource ref="anonymous" />
        </resources>
    </route>
    <route url="/V1/sellers/resetPassword" method="POST">
        <service class="Magento\Seller\Api\AccountManagementInterface" method="resetPassword" />
        <resources>
            <resource ref="anonymous" />
        </resources>
    </route>
    <route url="/V1/sellers/:sellerId/confirm" method="GET">
        <service class="Magento\Seller\Api\AccountManagementInterface" method="getConfirmationStatus" />
        <resources>
            <resource ref="Magento_Seller::manage" />
        </resources>
    </route>
    <route url="/V1/sellers/confirm" method="POST">
        <service class="Magento\Seller\Api\AccountManagementInterface" method="resendConfirmation" />
        <resources>
            <resource ref="Magento_Seller::manage" />
        </resources>
    </route>
    <route url="/V1/sellers/validate" method="PUT">
        <service class="Magento\Seller\Api\AccountManagementInterface" method="validate" />
        <resources>
            <resource ref="Magento_Seller::manage" />
        </resources>
    </route>
    <route url="/V1/sellers/:sellerId/permissions/readonly" method="GET">
        <service class="Magento\Seller\Api\AccountManagementInterface" method="isReadonly" />
        <resources>
            <resource ref="Magento_Seller::seller" />
        </resources>
    </route>
    <route url="/V1/sellers/:sellerId" method="DELETE">
        <service class="Magento\Seller\Api\SellerRepositoryInterface" method="deleteById" />
        <resources>
            <resource ref="Magento_Seller::delete" />
        </resources>
    </route>
    <route url="/V1/sellers/isEmailAvailable" method="POST">
        <service class="Magento\Seller\Api\AccountManagementInterface" method="isEmailAvailable" />
        <resources>
            <resource ref="anonymous" />
        </resources>
    </route>

    <!-- Seller Addresses -->
    <route url="/V1/sellers/addresses/:addressId" method="GET">
        <service class="Magento\Seller\Api\AddressRepositoryInterface" method="getById" />
        <resources>
            <resource ref="Magento_Seller::manage" />
        </resources>
    </route>
    <route url="/V1/sellers/me/billingAddress" method="GET" soapOperation="getMyDefaultBillingAddress">
        <service class="Magento\Seller\Api\AccountManagementInterface" method="getDefaultBillingAddress" />
        <resources>
            <resource ref="self" />
        </resources>
        <data>
            <parameter name="sellerId" force="true">%seller_id%</parameter>
        </data>
    </route>
    <route url="/V1/sellers/:sellerId/billingAddress" method="GET">
        <service class="Magento\Seller\Api\AccountManagementInterface" method="getDefaultBillingAddress" />
        <resources>
            <resource ref="Magento_Seller::manage" />
        </resources>
    </route>
    <route url="/V1/sellers/me/shippingAddress" method="GET" soapOperation="getMyDefaultShippingAddress">
        <service class="Magento\Seller\Api\AccountManagementInterface" method="getDefaultShippingAddress" />
        <resources>
            <resource ref="self" />
        </resources>
        <data>
            <parameter name="sellerId" force="true">%seller_id%</parameter>
        </data>
    </route>
    <route url="/V1/sellers/:sellerId/shippingAddress" method="GET">
        <service class="Magento\Seller\Api\AccountManagementInterface" method="getDefaultShippingAddress" />
        <resources>
            <resource ref="Magento_Seller::manage" />
        </resources>
    </route>
    <route url="/V1/addresses/:addressId" method="DELETE">
        <service class="Magento\Seller\Api\AddressRepositoryInterface" method="deleteById" />
        <resources>
            <resource ref="Magento_Seller::manage" />
        </resources>
    </route>
</routes>