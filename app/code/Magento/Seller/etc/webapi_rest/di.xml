<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <type name="Magento\Framework\Authorization">
        <plugin name="sellerAuthorization" type="Magento\Seller\Model\Plugin\SellerAuthorization" />
    </type>
    <type name="Magento\Authorization\Model\CompositeUserContext">
        <arguments>
            <argument name="userContexts" xsi:type="array">
                <item name="sellerSessionUserContext" xsi:type="array">
                    <item name="type" xsi:type="object">Magento\Seller\Model\Authorization\SellerSessionUserContext\Proxy</item>
                    <item name="sortOrder" xsi:type="string">20</item>
                </item>
            </argument>
        </arguments>
    </type>
    <type name="Magento\Seller\Api\SellerRepositoryInterface">
        <plugin name="updateSellerByIdFromRequest" type="Magento\Seller\Model\Plugin\UpdateSeller" />
    </type>
    <type name="Magento\Seller\Model\Seller\AuthorizationComposite">
        <arguments>
            <argument name="authorizationChecks" xsi:type="array">
                <item name="rest_seller_authorization" xsi:type="object">
                    Magento\Seller\Model\Seller\Authorization
                </item>
            </argument>
        </arguments>
    </type>
    <preference for="Magento\Seller\Api\AccountManagementInterface" type="Magento\Seller\Model\AccountManagementApi" />
</config>