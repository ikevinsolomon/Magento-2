<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <preference for="Magento\Seller\Model\Seller" type="Magento\Seller\Model\Backend\Seller" />
    <type name="Magento\Seller\Model\ResourceModel\Seller\Collection">
        <arguments>
            <argument name="modelName" xsi:type="string">Magento\Seller\Model\Backend\Seller</argument>
        </arguments>
    </type>
    <preference for="Magento\Framework\Session\SessionManagerInterface" type="Magento\Backend\Model\Session" />
    <type name="Magento\Ui\Model\Export\MetadataProvider">
        <arguments>
            <argument name="data" xsi:type="array">
                <item name="seller_listing" xsi:type="array">
                    <item name="created_at" xsi:type="string">created_at</item>
                    <item name="last_visit_at" xsi:type="string">last_visit_at</item>
                </item>
            </argument>
        </arguments>
    </type>
    <virtualType name="SellerGirdFilterPool" type="Magento\Framework\View\Element\UiComponent\DataProvider\FilterPool">
        <arguments>
            <argument name="appliers" xsi:type="array">
                <item name="regular" xsi:type="object">Magento\Framework\View\Element\UiComponent\DataProvider\RegularFilter</item>
                <item name="fulltext" xsi:type="object">Magento\Seller\Ui\Component\Listing\FulltextFilter</item>
            </argument>
        </arguments>
    </virtualType>
    <virtualType name="SellerGridCollectionReporting" type="Magento\Framework\View\Element\UiComponent\DataProvider\Reporting">
        <arguments>
            <argument name="filterPool" xsi:type="object">SellerGirdFilterPool</argument>
        </arguments>
    </virtualType>
    <type name="Magento\Seller\Ui\Component\DataProvider">
        <arguments>
            <argument name="reporting" xsi:type="object">SellerGridCollectionReporting</argument>
        </arguments>
    </type>
    <type name="Magento\Store\Model\Website">
        <plugin name="reindex_seller_grid_after_website_remove" type="Magento\Seller\Model\Plugin\SellerGridIndexAfterWebsiteDelete" />
        <plugin name="deleteSellerGroupExcludedWebsiteAfterWebsiteDelete" type="Magento\Seller\Model\Plugin\Website\DeleteSellerGroupExcludedWebsite" />
    </type>
</config>