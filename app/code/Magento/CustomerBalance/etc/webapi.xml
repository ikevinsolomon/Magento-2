<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Webapi:etc/webapi.xsd">

    <route url="/V1/carts/mine/balance/apply" method="POST">
        <service class="Magento\CustomerBalance\Api\BalanceManagementInterface" method="apply"/>
        <resources>
            <resource ref="self" />
        </resources>
        <data>
            <parameter name="cartId" force="true">%cart_id%</parameter>
        </data>
    </route>

	<route url="/V1/carts/useStoreCredit/:cartId" method="POST">
	
        <service class="Magento\CustomerBalance\Api\BalanceManagementInterface" method="apply"/>
        <resources>
            <resource ref="anonymous" />
        </resources>
        <!--<data>
            <parameter name="cartId" force="true">%cart_id%</parameter>
        </data>-->
    </route>

         <route url="/V1/carts/removeStoreCredit/:cartId" method="POST">
        <service class="Magento\CustomerBalance\Api\BalanceManagementInterface" method="remove"/>
        <resources>
            <resource ref="anonymous" />
        </resources>
        </route>

	<route url="/V1/StoreCreditBalance/:customer_id" method="GET">
        <service class="Magento\CustomerBalance\Api\BalanceManagementInterface" method="storecredit"/>
        <resources>
            <resource ref="anonymous" />
        </resources>
    </route>

    <route url="/V1/CustomerBalanceExpire/:customer_id" method="POST">
        <service class="Magento\CustomerBalance\Api\BalanceManagementInterface" method="balanceExpire"/>
        <resources>
            <resource ref="Magento_CustomerBalance::balanceExpire" />
        </resources>
    </route>

</routes>
