<?xml version="1.0"?>
<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../../../app/code/Magento/Webapi/etc/webapi.xsd">

	<route url="/V1/cart/items/:customer_id" method="GET">
		<service class="Honasa\Quote\Api\CustomerCartInterface" method="getCartDetails" />
		<resources>
			<resource ref="anonymous" />
		</resources>
	</route>

	<route url="/V1/cart/add/items" method="POST">
		<service class="Magento\Quote\Api\CartItemRepositoryInterface" method="save" />
		<resources>
			<resource ref="anonymous" />
		</resources>
	</route>

	<route url="/V1/cart/guest/items/:quote_id" method="GET">
		<service class="Honasa\Quote\Api\CustomerCartInterface" method="getGuestCartDetails" />
		<resources>
			<resource ref="anonymous" />
		</resources>
	</route>

	<route url="/V1/cart/create/:customer_id" method="GET">
		<service class="Honasa\Quote\Api\CustomerCartInterface" method="createQuote" />
		<resources>
			<resource ref="anonymous" />
		</resources>
	</route>

	<route url="/V1/cart/:quote_id" method="GET">
		<service class="Honasa\Quote\Api\CustomerCartInterface" method="cartById" />
		<resources>
			<resource ref="anonymous" />
		</resources>
	</route>

	<route url="/V1/cart/merge" method="POST">
		<service class="Honasa\Quote\Api\CustomerCartInterface" method="mergeCart" />
		<resources>
			<resource ref="anonymous" />
		</resources>
	</route>

	<route url="/V1/cart/duplicate/:quote_id/:customer_id" method="GET">
		<service class="Honasa\Quote\Api\CustomerCartInterface" method="duplicateQuote" />
		<resources>
			<resource ref="anonymous" />
		</resources>
	</route>

	<route url="/V1/cart/duplicate-guest/:quote_id" method="GET">
		<service class="Honasa\Quote\Api\CustomerCartInterface" method="duplicateQuoteGuest" />
		<resources>
			<resource ref="anonymous" />
		</resources>
	</route>
</routes>