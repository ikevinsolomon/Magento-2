<?xml version="1.0"?>
<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Webapi:etc/webapi.xsd">
    <route url="/V1/catalog/products" method="GET">
        <service class="Honasa\Catalog\Api\CatalogProductInterface" method="getProducts"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>

    <route url="/V1/catalog/products/:productId" method="GET">
        <service class="Honasa\Catalog\Api\CatalogProductInterface" method="getProductsById"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>


    <route url="/V1/catalog/products/:productSlug" method="GET">
        <service class="Honasa\Catalog\Api\CatalogProductInterface" method="getProductsBySlug"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>

</routes>
